<package>
  <description brief="youbot_imarker">

    youbot_imarker, adapted from move_arm package in the arm_navigation stack. This package allows control of the YouBot running in Gazebo simulation from an interactive marker based interface in Rviz.

  </description>
  <author>Arjun Arumbakkam</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/youbot_imarker</url>
  <depend package="std_msgs"/>
  <depend package="roscpp"/>
  <depend package="tf"/>
  <depend package="geometry_msgs"/>
  <depend package="nav_msgs"/>
  <depend package="sensor_msgs"/>
  <depend package="trajectory_msgs"/>
  <depend package="brics_actuator"/>
  <depend package="visualization_msgs"/>
  <depend package="interactive_markers"/>
  <depend package="bullet"/>
  <depend package="move_arm"/>
  <depend package="planning_environment"/>
  <depend package="actionlib"/>
  <depend package="actionlib_msgs"/>
  <depend package="tf_conversions"/>
  <depend package="control_msgs"/>
  <depend package="kinematics_msgs"/>
  <depend package="arm_navigation_msgs"/>
  <depend package="geometric_shapes" />
  <depend package="planning_models" />

  <export>
    <cpp cflags="-I${prefix}/msg/cpp -I${prefix}/include"/>
  </export>  

</package>


