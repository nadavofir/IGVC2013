body {
	margin: 0;
	padding-left: 10px;
	padding-right: 10px;
}

.headers {
	height: 150px;
	overflow: visible;
}

.logo {
	height: 100px;
	position: absolute;	
	top: 0;
	left: 0;
}

.cartoon {
	height: 100px;
	position: absolute;	
	top: 0;
	right: 0;
}

.connectionpanel {
	text-align: center;
	padding-top: 30px;
	padding-bottom: 50px;
}

.pose-sequence-widget, .viz {
	display: inline-block;
	float: left;
}

.pose-sequence-widget {
	width: 40%;
}

.viz {
	width: 60%;
	border: 1px solid #759DC0;
	border-top-right-radius: 7px;
	border-bottom-right-radius: 7px;
	border-left: 0;
	box-sizing:border-box;
    -moz-box-sizing:border-box;
    -webkit-box-sizing:border-box;
}

.viz .posestatus {    
	height: 20px;
    overflow: hidden;
    white-space: nowrap;
    padding: 5px;
}

.pose-sequence-widget {
    border: 1px solid #759DC0;
    border-top-left-radius: 7px;
    border-bottom-left-radius: 7px;
	box-sizing:border-box;
    -moz-box-sizing:border-box;
    -webkit-box-sizing:border-box;
}

.korg-nanokontrol {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	height: 180px;
	margin: 10px;
}

.museum-send-to-robot {
	text-align: center;
	margin-top: -90px;
	height: 90px;
}



.museum-send-to-robot .dijitButtonNode {
	background-color: #F2FEE5 !important;
	border-color: #A2AE95 !important;
}

.museum-send-to-robot .dijitButtonHover .dijitButtonNode {
	background-color: #E2EED5 !important;
}